<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EditorPanelExample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:models="clr-namespace:EditorPanelExample.Models"
		xmlns:controls="clr-namespace:EditorPanelExample.Views.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EditorPanelExample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="EditorPanelExample">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Window.DataTemplates>
		<DataTemplate DataType="{x:Type models:Material}">
			<controls:MaterialControl DataContext="{Binding}"/>
		</DataTemplate>

		<DataTemplate DataType="{x:Type models:MaterialList}">
			<controls:MaterialListControl DataContext="{Binding}"/>
		</DataTemplate>

		<DataTemplate DataType="{x:Type models:Transform}">
			<controls:TransformControl DataContext="{Binding}"/>
		</DataTemplate>
	</Window.DataTemplates>

	<Grid>
		<ItemsControl Items="{Binding Components}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Vertical" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</Grid>

</Window>
