<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="100"
             x:Class="EditorPanelExample.Views.Controls.MaterialListControl">

	<Border Background="#383838"
			BorderBrush="Black"
			BorderThickness="0 0 0 2"
			CornerRadius="0"
			Padding="4">
		<Grid RowDefinitions="20, Auto, Auto">
			<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5">
				<Image Width="12" VerticalAlignment="Center" Source="avares://EditorPanelExample/Assets/arrow-down.png"/>
				<TextBlock Classes="controlTitle">Material List</TextBlock>
			</StackPanel>

			<ItemsControl Grid.Row="1" Items="{Binding Path=Materials}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="* Auto">
							<TextBox Grid.Column="0" Text="{Binding MaterialName}"/>
							<Button Grid.Column="1" Margin="2 0" Foreground="White">X</Button>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>

			<Button Grid.Row="2" Command="{Binding AddMaterial}">Add Material</Button>
		</Grid>
	</Border>
	
</UserControl>
