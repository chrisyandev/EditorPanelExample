<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="100"
			 Width="150" Height="100"
             x:Class="EditorPanelExample.Views.Controls.MaterialListControl">
	
	<Grid>
		<ListBox Items="{Binding}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border Background="Red" CornerRadius="4" Padding="4">
						<TextBlock Text="{Binding Path=MaterialName}"/>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
	
</UserControl>
