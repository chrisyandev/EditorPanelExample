<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="200"
             x:Class="EditorPanelExample.Views.Controls.TransformControl">

	<Border Background="#383838"
			BorderBrush="Black"
			BorderThickness="0 0 0 2"
			CornerRadius="0"
			Padding="4">
		<Grid RowDefinitions="20, Auto">
			<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5">
				<Image Width="12" VerticalAlignment="Center" Source="avares://EditorPanelExample/Assets/arrow-down.png"/>
				<TextBlock Classes="controlTitle">Transform</TextBlock>
			</StackPanel>
			
			<StackPanel Grid.Row="1">
				<TextBox Text="{Binding X}" />
				<TextBox Text="{Binding Y}" />
				<TextBox Text="{Binding Z}" />
			</StackPanel>
		</Grid>
	</Border>
	
</UserControl>
