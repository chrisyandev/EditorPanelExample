<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:EditorPanelExample"
			 xmlns:debugger="using:EditorPanelExample.Debugger"
             x:Class="EditorPanelExample.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
		<StyleInclude Source="avares://EditorPanelExample/Views/Controls/ComponentHeaderTemplate.axaml" />
		<StyleInclude Source="avares://EditorPanelExample/Views/Controls/TextBoxClearButtonInsideTemplate.axaml" />
    </Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="ShuttleGreyBrush">#64676e</SolidColorBrush>
		<SolidColorBrush x:Key="LacqueredLicoriceBrush">#383838</SolidColorBrush>
		<SolidColorBrush x:Key="CharcoalBrush">#4a4a4a</SolidColorBrush>

		<debugger:DebuggerConverter x:Key="DebuggerConverter" />
	</Application.Resources>
</Application>
